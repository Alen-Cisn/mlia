{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug MLia Interpreter",
      "cargo": {
        "args": ["build", "--bin=mlia", "--package=mlia"],
        "filter": {
          "name": "mlia",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_LOG": "debug",
        "RUST_BACKTRACE": "1"
      },
      "console": "integratedTerminal",
      "preLaunchTask": "cargo build"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug MLia with Example File",
      "cargo": {
        "args": ["build", "--bin=mlia", "--package=mlia"],
        "filter": {
          "name": "mlia",
          "kind": "bin"
        }
      },
      "args": ["${workspaceFolder}/docs/main.mlia"],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_LOG": "debug",
        "RUST_BACKTRACE": "1"
      },
      "console": "integratedTerminal",
      "preLaunchTask": "cargo build"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug MLia with Custom File",
      "cargo": {
        "args": ["build", "--bin=mlia", "--package=mlia"],
        "filter": {
          "name": "mlia",
          "kind": "bin"
        }
      },
      "args": ["${input:mliaFile}"],
      "cwd": "${workspaceFolder}",
      "env": {
        "RUST_LOG": "debug",
        "RUST_BACKTRACE": "1"
      },
      "console": "integratedTerminal",
      "preLaunchTask": "cargo build"
    }
  ],
  "inputs": [
    {
      "id": "mliaFile",
      "description": "Path to MLia source file",
      "default": "${workspaceFolder}/docs/main.mlia",
      "type": "promptString"
    }
  ]
}
